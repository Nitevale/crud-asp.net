@model CarsEntity

@{
    ViewData["Title"] = "Update Details";
}

<h2>Update Car Details</h2>

<form id="createCarForm" asp-action="EditCar" asp-controller="Car" method="POST">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label>Car Brand</label>
                <input asp-for="Brand" type="text" class="form-control" required>
                <span asp-validation-for="Brand" class="text-danger" id="brandError" style="display:none;"></span>
            </div>
            <div class="form-group">
                <label>Car Model</label>
                <input asp-for="Model" type="text" class="form-control" required>
                <span asp-validation-for="Model" class="text-danger" id="modelError" style="display:none;"></span>
            </div>
            <div class="form-group">
                <label>Year Version</label>
                <input asp-for="Version" type="text" class="form-control" minlength="4" maxlength="4" required>
                <span asp-validation-for="Version" class="text-danger" id="versionError" style="display:none;"></span>
            </div>
            <div class="form-group">
                <label>Plate Number</label>
                <input asp-for="PlateNum" type="text" class="form-control" maxlength="8" required>
                <span asp-validation-for="PlateNum" class="text-danger" id="plateNumError" style="display:none;"></span>
            </div>
            <div class="form-group">
                <label>Car Type</label>
                <select asp-for="CarType" class="form-control" required>
                    <option value="">-- Select --</option>
                    <option value="Sedan">Sedan</option>
                    <option value="SUV">SUV</option>
                    <option value="Compact">Compact</option>
                    <option value="Truck">Truck</option>
                    <option value="Sports">Sports</option>
                </select>
                <span asp-validation-for="CarType" class="text-danger" id="carTypeError" style="display:none;"></span>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" asp-controller="Car" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>