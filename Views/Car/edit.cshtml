@model CarsEntity

@{
    ViewData["Title"] = "Editing a car";
}

<h2>Cars</h2>

<form asp-action="EditCar" asp-controller="Car" method="POST">
    @Html.AntiForgeryToken()
    <input type="hidden" name="_method" value="PUT" >
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label>Car Brand</label>
                <input asp-for="Brand" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Car Model</label>
                <input asp-for="Model" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Year Version</label>
                <input asp-for="Version" type="number" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Plate Number</label>
                <input asp-for="PlateNum" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Car Type</label>
                <input asp-for="CarType" type="text" class="form-control" required>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-action="Index" asp-controller="Car" class="btn btn-secondary">Close</a>
            </div>
        </div>
    </div>
</form>