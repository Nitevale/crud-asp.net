@model List<CarsEntity>

@{
    ViewData["Title"] = "Cars";
}

<div class="container mt-5">
    <h2 class="mb-4">Car Inventory</h2>
    <div class="row mb-3">
        <div class="col-md-12 text-right">
            <a asp-action="Create" asp-controller="Car" class="btn btn-success">Add +</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover table-responsive">
                <thead class="thead-dark text-white bg-dark">
                    <tr>
                        <td>Brand</td>
                        <td>Model</td>
                        <td>Version</td>
                        <td>Plate Number</td>
                        <td>Car Type</td>
                        <td class="action-column">Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model) {
                        <tr>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>@item.Version</td>
                            <td>@item.PlateNum</td>
                            <td>@item.CarType</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Car" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fa-regular fa-pen-to-square"></i></a>
                                <button type="button" class="btn btn-danger btn-sm delete-button" data-toggle="modal" data-target="#deleteModal" data-id="@item.Id"><i class="fa-solid fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close close-button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this data?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-action="DeleteConfirmed" asp-controller="Car">
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .action-column {
        width: 90px;
    }
</style>