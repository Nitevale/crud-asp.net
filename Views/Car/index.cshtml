@model List<CarsEntity>

@{
    ViewData["Title"] = "Cars";
}

<h2>Cars</h2>

<br>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Car" class="btn btn-success">Create Car</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Model </td>
                    <td>Brand </td>
                    <td>VIN </td>
                    <td>Action </td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model) {
                    <tr>
                        <td>@item.Model</td>
                        <td>@item.Brand</td>
                        <td>@item.ISBN</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Car" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-controller="Car" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>